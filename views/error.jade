extends ./layouts/base.jade

append head
  link(rel="stylesheet" href="libs/bootstrap/css/bootstrap.min.css")
  link(rel="stylesheet" href="libs/fontawesome/css/font-awesome.min.css")
  title WANTit
  style.
    html, body {
      width: 100%;
      height: 100%;
    }

block header
  div.container.header
    div.page-header.text-center
      h1
        span.fa.fa-exclamation-triangle
        |  #{statusCode} #{error}

block content
  div.container
    div.row
      div.col-sm-6.col-sm-offset-3
        div.well.text-center
          h3 Oops, sorry we can't find that page
          p Either something went wrong or the page doesn't exist