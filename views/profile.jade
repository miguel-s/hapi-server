extends ./layouts/base.jade

append head
  link(rel="stylesheet" href="libs/bootstrap/css/bootstrap.min.css")
  link(rel="stylesheet" href="libs/fontawesome/css/font-awesome.min.css")
  title WANTit
  style.
    html, body {
      width: 100%;
      height: 100%;
    }

block header
  +header('Profile')

block content
  div.container
    div.row
      div.col-sm-12
        div.well
          h3
            span.fa.fa-user
            |  Local
          p
            strong id
            | : #{user.id}
            br
            strong email
            | : #{user.email}
            br
            strong password
            | : #{user.password}