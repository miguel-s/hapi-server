extends ./layouts/base.jade

append head
  link(rel="stylesheet" href="libs/bootstrap/css/bootstrap.min.css")
  link(rel="stylesheet" href="libs/fontawesome/css/font-awesome.min.css")
  title WANTit
  style.
    html, body {
      width: 100%;
      height: 100%;
    }
    body {
      padding-top: 80px;
    }

block content
  div.container
    div.col-sm-6.col-sm-offset-3
      h1
        span.fa.fa-sign-in
        |  Signup
      if message
        div.alert.alert-danger= message
      form(action="/signup" method="post")
        div.form-group
          label Email
          input.form-control(type="text" name="email" placeholder="Email" value=email)
        div.form-group
          label Password
          input.form-control(type="password" name="password" placeholder="Password")
        button.btn.btn-warning.btn-lg(type="submit") Signup
      hr
      p Already have an account?
        | #{space}
        a(href="/login") Login
      p Or go
        | #{space}
        a(href="/") home
        | .