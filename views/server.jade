extends ./layouts/base.jade

append head
  title Server
  style.
    html, body {
      width: 100%;
      height: 100%;
    }
    .progress-bar-default {
      background-color: Silver;
    }

block header
  +header('Server')

block content
  div.container
    div.row
    - var sources = ['facebook', 'twitter', 'foursquare', 'yelp', 'tripadvisor', 'minube', '11870']
      each source in sources
        div.col-sm-4(class="#{source}")
          div.well
            h3
              - var icon = (source === 'minube' ? 'cloud' : (source === '11870' ? 'cutlery' : source))
              span.fa(class="fa-#{icon}")
              |  #{source}
            p
              strong nÂº venues
              | : test
              br
              strong last update
              | : test
              br
              strong total time
              | : test
            p
              - var disabled = ((source === 'facebook' || source === 'twitter' || source === '11870') ? '' : 'disabled')
              button.btn.btn-primary.btn-sm.update(class="#{disabled}") Update
              button.btn.btn-warning.btn-sm.cancel(class="#{disabled}" style="display: none") Cancel
              | &nbsp;
              a.btn.btn-default.btn-sm.download(class="#{disabled}" href="data/#{source}/exports/details.csv" download="#{source}.csv") Download
            if source === '11870'
              p
                h4 Lists
                img.restaurants-spin(src="img/spin.gif" alt="Loading" height="15" width="15" style="display: none")
                span.fa.fa-check-circle.text-muted.restaurants
                |  Restaurants
                br
                img.barsandpubs-spin(src="img/spin.gif" alt="Loading" height="15" width="15" style="display: none")
                span.fa.fa-check-circle.text-muted.barsandpubs
                |  Bars and Pubs
                br
                img.coffeeshops-spin(src="img/spin.gif" alt="Loading" height="15" width="15" style="display: none")
                span.fa.fa-check-circle.text-muted.coffeeshops
                |  Coffee Shops
                br
                img.leisure-spin(src="img/spin.gif" alt="Loading" height="15" width="15" style="display: none")
                span.fa.fa-check-circle.text-muted.leisure
                |  Leisure
            p
              div.progress
                div.progress-bar.progress-bar-default(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 100%") 100%

block scripts
  script(src="libs/jquery-2.2.0.min.js")
  script(src="socket.io/socket.io.js")
  script(src="js/server.js")