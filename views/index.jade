      background-size: cover;
      color: white;
      height: 99vh;
    }
    .hero * {
      z-index: 1;
    }
    .hero h1, .hero h5 {
      margin-top: 4rem;
    }
    .hero .scroll {
      cursor: pointer;
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translate(-50%, 0)
    }
    .hero .overlay {
      background-color: DimGray;
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      opacity: 0.6;
      z-index: 0;
    }
    .how-it-works {
      position: relative;
      background-color: white;
      color: rgba(38, 38, 38, 0.8);
    }
    .how-it-works p {
      color: rgba(38, 38, 38, 0.6);
    }
    .how-it-works .row.title {
      height: 33.33%;
    }
    .how-it-works .video {
      background-color: #ea7b67;
      opacity: 0.7;
      position: relative;
      height: 0x;
      width: 80%;
      padding-top: 60%;
      margin: 0 auto;
    }
    .how-it-works .video .play-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      font-size: 8rem;
    }
    .how-it-works .row.content {
      height: 66.67%;
    }
    .download-app {
      position: relative;
      background-color: #67eab3;
      color: rgba(38, 38, 38, 0.9);
    }
    .download-app h3 {
      margin-bottom: 4rem;
    }
    .download-app h5 {
      color: rgba(38, 38, 38, 0.7);
      margin-bottom: 1rem;
    }
    .download-app .row {
      height: 100%;
    }
    .download-app .devices {
      position: relative;
      transform: translate(0, -15%);
      padding-top: 120%;
    }
    .download-app .device-android {
      position: absolute;
      top: 0;
      left: 0;
      background: url("img/android_wantit.png") no-repeat;
      background-size: contain;
      width: 60%;
      padding-top: 120%;
    }
    .download-app .device-ios {
      position: absolute;
      top: 50px;
      left: 120px;
      background: url("img/ios_wantit.png") no-repeat;
      background-size: contain;
      width: 60%;
      padding-top: 120%;
    }
    .join-wantit {
      position: relative;
      background-color: white;
      color: rgba(38, 38, 38, 0.8);
    }
    .join-wantit h3 {
      margin-bottom: 2rem;
    }
    .join-wantit p {
      color: rgba(38, 38, 38, 0.6);
      margin-bottom: 2rem;
    }
    .join-wantit button {
      text-transform: uppercase;
    }
    footer {
      position: relative;
      background-color: #ea7b67;
      color: white;
      padding-top: 2rem;
      padding-bottom: 0.5rem;
    }
    footer a {
      display: block;
      color: white;
      margin-top: 1rem;
    }
    footer .media {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }
    footer .media-item {
      position: relative;
      display: inline-block;
      background-color: white;
      height: 3rem;
      width: 3rem;
      margin: 1rem 0.25rem 1rem 0.25rem;
      border-radius: 50%;
    }
    footer .media span {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: #ea7b67;
      font-size: 1.5rem;
    }
    footer .copy {
      font-size: 0.75rem;
    }
    footer .copy a {
