block scripts
  script(src="libs/jquery/jquery-2.2.0.min.js")
  script.
    $(() => {
      const topBar = $('.top-bar');
      $(window).on('scroll', () => {
        const position = $(document).scrollTop();
        if (position === 0) {
          topBar.addClass('transparent');
        } else {
          topBar.removeClass('transparent');
        }
      });
      $(window).on('touchmove', () => {
        const position = $(document).scrollTop();
        if (position === 0) {
          topBar.addClass('transparent');
        } else {
          topBar.removeClass('transparent');
        }
      });
      $('.scroll').on('click', () => {
        $('html, body').animate({scrollTop: $(window).height() - $('.top-bar').height()})
      });
      $('.scroll').on('touchend', () => {
        $('html, body').animate({scrollTop: $(window).height() - $('.top-bar').height()})
      });
    });